{
	"compilerOptions": {
		"composite": true,
		"skipLibCheck": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": false,
		"lib": ["ES2015", "DOM", "DOM.Iterable"],
		"paths": {
			"~/*": ["src/*"]
		},
		"baseUrl": ".",
		"jsx": "preserve",
		"jsxImportSource": "vue",
		"jsxFactory": "h",
		"jsxFragmentFactory": "Fragment"
	},
	"include": ["vite.config.ts", "src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "src/**/*.d.ts"]
}
